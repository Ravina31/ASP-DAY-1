@model MV_DemoModelBinding.Models.PersonModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>PersonModel</h4>
            <hr />
            
              
            <div class="form-group">

                <label for="Id" class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.Id)
                </label>

                <div class="col-md-10">

                    <input type="number" id="txtId" name="txtId" class="form-control" />
                </div>
            </div>

                    <div class="form-group">

                        <label for="FirstName" class="control-label col-md-2">
                            @Html.DisplayNameFor(model => model.FirstName)
                        </label>

                        <div class="col-md-10">

                            <input type="text" id="txtFirstName" name="txtFirstName" class="form-control" />
                        </div>
                    </div>

                        <div class="form-group">

                            <label for="MiddleName" class="control-label col-md-2">
                                @Html.DisplayNameFor(model => model.MiddleName)
                            </label>

                            <div class="col-md-10">

                                <input type="text" id="txtMiddleName" name="txtMiddleName" class="form-control" />
                            </div>
                        </div>

                            <div class="form-group">

                                <label for="LastName" class="control-label col-md-2">
                                    @Html.DisplayNameFor(model => model.LastName)
                                </label>

                                <div class="col-md-10">

                                    <input type="text" id="txtLastName" name="txtLastName" class="form-control" />
                                </div> </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
    }
    
   
</body>
</html>
